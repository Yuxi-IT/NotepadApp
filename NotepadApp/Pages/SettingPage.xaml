<Page x:Class="NotepadApp.Pages.SettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NotepadApp.Pages"
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="800"
      Title="SettingPage">

    <ScrollViewer>
        <StackPanel Margin="20">
            <Label Content="设置" FontSize="32" Margin="0,0,0,20"/>
            <!-- 外观设置 -->
            <Label Content="外观设置" FontSize="18"/>
            <ui:SettingsExpander Header="应用主题" IsExpanded="True" Margin="0,0,0,8">
                <ui:SettingsExpander.HeaderIcon>
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Color}"/>
                </ui:SettingsExpander.HeaderIcon>
                <ui:SettingsExpander.Description>
                    设置显示的应用主题
                </ui:SettingsExpander.Description>

                <ui:SettingsExpander.Items>
                    <ui:SettingsCard>
                        <ui:SettingsCard.Header>
                            <StackPanel Margin="0,0,0,8" HorizontalAlignment="Left">
                                <RadioButton x:Name="LightThemeRadio" GroupName="ThemeGroup" Content="浅色模式"/>
                                <RadioButton x:Name="DarkThemeRadio" GroupName="ThemeGroup" Content="深色模式"/>
                                <RadioButton x:Name="SystemThemeRadio" GroupName="ThemeGroup" Content="使用系统设置" IsChecked="True"/>
                            </StackPanel>
                        </ui:SettingsCard.Header>
                    </ui:SettingsCard>
                </ui:SettingsExpander.Items>
            </ui:SettingsExpander>

            <Label Content="文本格式" FontSize="18"/>
            <!-- 文本格式设置 -->
            <ui:SettingsExpander Header="字体" IsExpanded="True" Margin="0,0,0,8">
                <ui:SettingsExpander.HeaderIcon>
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Font}"/>
                </ui:SettingsExpander.HeaderIcon>
                
                <ui:SettingsExpander.Items>
                    <ui:SettingsCard Header="字体系列">
                        <ComboBox x:Name="FontFamilyComboBox" SelectedIndex="0" Margin="0,8,0,0"/>
                    </ui:SettingsCard>

                    <ui:SettingsCard Header="字体粗细">
                        <ComboBox x:Name="FontWeightComboBox" SelectedIndex="0" Margin="0,8,0,0"/>
                    </ui:SettingsCard>

                    <ui:SettingsCard>
                        <TextBlock x:Name="FontPreviewText" Text="预览字体 - ABCabc123" HorizontalAlignment="Center" FontSize="16"/>
                    </ui:SettingsCard>
                </ui:SettingsExpander.Items>
            </ui:SettingsExpander>

            <ui:SettingsExpander Header="自动换行" Margin="0,0,0,8">
                <ui:SettingsExpander.HeaderIcon>
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.GridView}"/>
                </ui:SettingsExpander.HeaderIcon>

                <ui:ToggleSwitch IsOn="True"/>
            </ui:SettingsExpander>

            <!-- 应用设置 -->
            <Label Content="应用设置" FontSize="18"/>
            <ui:SettingsExpander Header="启动设置" IsExpanded="True" Margin="0,0,0,8">
                <ui:SettingsExpander.HeaderIcon>
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.FileExplorer}"/>
                </ui:SettingsExpander.HeaderIcon>
                <ui:SettingsExpander.Description>
                    NotpadApp 启动时
                </ui:SettingsExpander.Description>
                
                <ui:SettingsExpander.Items>
                    <ui:SettingsCard>
                        <ui:SettingsCard.Header>
                            <StackPanel>
                                <RadioButton x:Name="RestoreTabsRadio" GroupName="StartupGroup" 
                                Content="打开上次标签页" IsChecked="True" Margin="0,0,0,8"/>
                                <RadioButton x:Name="NewTabRadio" GroupName="StartupGroup" 
                                Content="打开空标签页"/>

                            </StackPanel>
                        </ui:SettingsCard.Header>
                    </ui:SettingsCard>
                </ui:SettingsExpander.Items>
            </ui:SettingsExpander>

            <ui:SettingsExpander Header="储存管理" Margin="0,0,0,8">
                <ui:SettingsExpander.HeaderIcon>
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Delete}"/>
                </ui:SettingsExpander.HeaderIcon>
                <ui:SettingsExpander.Description>
                    管理NotepadApp的储存配置
                </ui:SettingsExpander.Description>

                <Button x:Name="ClearConfigButton" Content="清空配置文件" HorizontalAlignment="Left"/>
            </ui:SettingsExpander>
        </StackPanel>
    </ScrollViewer>
</Page>