<Page x:Class="NotepadApp.Pages.TextEditorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NotepadApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TextEditorPage">

    <Grid>
        <TextBox x:Name="MainEditor" 
             FontSize="14" 
             PreviewMouseWheel="MainEditor_PreviewMouseWheel" 
             PreviewKeyDown="MainEditor_PreviewKeyDown" BorderThickness="0,0,0,0" TextWrapping="WrapWithOverflow" Margin="0,0,0,25"/>
        <StatusBar VerticalAlignment="Bottom" Height="25" Background="#FF61B7FF" Foreground="#E4FFFFFF" Padding="10,0,20,0">
            <TextBlock x:Name="Zoom" Text="100%" Margin="0,0,10,0"/>
            <TextBlock x:Name="Encoding" Text="UTF-8" Margin="0,0,10,0"/>
            <TextBlock x:Name="Type" Text="Text文本" Margin="0,0,10,0"/>
            <TextBlock x:Name="IsSaved" Text="已保存" Margin="0,0,10,0"/>
            <TextBlock x:Name="Lines" Text="10行" Margin="0,0,10,0"/>
            <TextBlock x:Name="Chars" Text="1000个字符" Margin="0,0,10,0"/>
        </StatusBar>
    </Grid>
</Page>